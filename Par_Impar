#include <iostream> // Incluimos la biblioteca para entrada/salida

int main() {
    int numero; // Declaramos una variable para el número entero

    // Pedimos al usuario que ingrese un número
    std::cout << "Ingresa un número entero: ";
    std::cin >> numero; // Leemos el número ingresado

    // Comprobamos si el número es par o impar
    if (numero % 2 == 0) {
        // Si el resto de dividir por 2 es 0, es par
        std::cout << numero << " es un número par." << std::endl;
    } else {
        // Si el resto no es 0, es impar
        std::cout << numero << " es un número impar." << std::endl;
    }

    return 0; // Indicamos que el programa terminó correctamente
}
