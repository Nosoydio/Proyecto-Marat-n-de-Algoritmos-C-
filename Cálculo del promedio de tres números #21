#include <iostream>
using namespace std;
int main() {
    double num1, num2, num3, promedio;
    cout << "Ingrese el primer número: ";
    cin >> num1;
    cout << "Ingrese el segundo número: ";
    cin >> num2;
    cout << "Ingrese el tercer número: ";
    cin >> num3;
    promedio = (num1 + num2 + num3) / 3;
    cout << "El promedio es: " << promedio << endl;
    return 0;
}
