#include <iostream>
using namespace std;

int main() {
    int n;
    bool ordenado = true;
    cout << "Ingrese la cantidad de elementos del arreglo: ";
    cin >> n;
    int arreglo[n];
    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> arreglo[i];
    }

    for (int i = 1; i < n; i++) {
        if (arreglo[i] > arreglo[i - 1]) {
            ordenado = false;
            break;
        }
    }

    if (ordenado) {
        cout << "El arreglo está ordenado descendentemente." << endl;
    } else {
        cout << "El arreglo NO está ordenado descendentemente." << endl;
    }

    return 0;
}
