#include <iostream>
using namespace std;

int main() {
    int n, k;
    cout << "Ingrese la cantidad de elementos del arreglo: ";
    cin >> n;
    int arreglo[n];
    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> arreglo[i];
    }
    cout << "Ingrese el tamaño de la ventana: ";
    cin >> k;

    cout << "Promedios móviles simples: ";
    for (int i = 0; i <= n - k; i++) {
        double suma = 0;
        for (int j = 0; j < k; j++) {
            suma += arreglo[i + j];
        }
        double promedio = suma / k;
        cout << promedio << " ";
    }
    cout << endl;
    return 0;
}
