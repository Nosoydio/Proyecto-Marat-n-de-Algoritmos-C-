#include <iostream>
using namespace std;

int main() {
    int minutos, horas, resto;
    cout << "Ingrese la cantidad de minutos: ";
    cin >> minutos;
    horas = minutos / 60;
    resto = minutos % 60;
    cout << minutos << " minutos equivalen a " << horas << " hora(s) y " << resto << " minuto(s)." << endl;
    return 0;
}
