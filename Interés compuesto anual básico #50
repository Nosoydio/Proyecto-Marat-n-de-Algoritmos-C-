#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double capital, tasa, tiempo, monto;
    cout << "Ingrese el capital inicial: ";
    cin >> capital;
    cout << "Ingrese la tasa de interés anual (en porcentaje): ";
    cin >> tasa;
    cout << "Ingrese el tiempo en años: ";
    cin >> tiempo;
    monto = capital * pow(1 + tasa / 100, tiempo);
    cout << "El monto acumulado con interés compuesto es: " << monto << endl;
    return 0;
}
