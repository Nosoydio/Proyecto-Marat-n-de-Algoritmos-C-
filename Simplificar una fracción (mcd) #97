#include <iostream>
using namespace std;

int mcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int numerador, denominador;
    cout << "Ingrese el numerador: ";
    cin >> numerador;
    cout << "Ingrese el denominador: ";
    cin >> denominador;

    if (denominador == 0) {
        cout << "Error: el denominador no puede ser cero." << endl;
        return 0;
    }

    int divisor = mcd(numerador, denominador);
    int numSimplificado = numerador / divisor;
    int denSimplificado = denominador / divisor;

    cout << "FracciÃ³n simplificada: " << numSimplificado << "/" << denSimplificado << endl;

    return 0;
}
