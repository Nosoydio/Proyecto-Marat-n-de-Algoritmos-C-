#include <iostream>
#include <vector>
using namespace std;

int main() {
    int filas, columnas;
    cout << "Ingrese el número de filas: ";
    cin >> filas;
    cout << "Ingrese el número de columnas: ";
    cin >> columnas;

    vector<vector<int>> matriz(filas, vector<int>(columnas));
    int contadorCeros = 0;

    cout << "Ingrese los elementos de la matriz binaria (solo 0 o 1):" << endl;
    for (int i = 0; i < filas; i++) {
        for (int j = 0; j < columnas; j++) {
            cout << "Elemento [" << i << "][" << j << "]: ";
            cin >> matriz[i][j];
            if (matriz[i][j] == 0) {
                contadorCeros++;
            }
        }
    }

    cout << "Cantidad de ceros en la matriz: " << contadorCeros << endl;

    return 0;
}
