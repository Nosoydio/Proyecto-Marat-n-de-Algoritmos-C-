#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del arreglo: ";
    cin >> n;
    double arreglo[n];
    for (int i = 0; i < n; i++) {
        cout << "Ingrese el elemento " << i + 1 << ": ";
        cin >> arreglo[i];
    }
    sort(arreglo, arreglo + n);
    double mediana;
    if (n % 2 == 0) {
        mediana = (arreglo[n / 2 - 1] + arreglo[n / 2]) / 2.0;
    } else {
        mediana = arreglo[n / 2];
    }
    cout << "La mediana del arreglo es: " << mediana << endl;
    return 0;
}
