#include <iostream>
#include <vector>
using namespace std;

int main() {
    int dimension;
    cout << "Ingrese la dimensiÃ³n de la matriz (N): ";
    cin >> dimension;

    vector<vector<int>> matriz(dimension, vector<int>(dimension));
    cout << "Ingrese los elementos de la matriz:" << endl;
    for (int fila = 0; fila < dimension; fila++) {
        for (int columna = 0; columna < dimension; columna++) {
            cout << "Elemento [" << fila << "][" << columna << "]: ";
            cin >> matriz[fila][columna];
        }
    }

    int inicioFila = 0, finFila = dimension - 1;
    int inicioColumna = 0, finColumna = dimension - 1;

    cout << "Elementos en orden espiral:" << endl;
    while (inicioFila <= finFila && inicioColumna <= finColumna) {
        for (int col = inicioColumna; col <= finColumna; col++) {
            cout << matriz[inicioFila][col] << " ";
        }
        inicioFila++;

        for (int fila = inicioFila; fila <= finFila; fila++) {
            cout << matriz[fila][finColumna] << " ";
        }
        finColumna--;

        if (inicioFila <= finFila) {
            for (int col = finColumna; col >= inicioColumna; col--) {
                cout << matriz[finFila][col] << " ";
            }
            finFila--;
        }

        if (inicioColumna <= finColumna) {
            for (int fila = finFila; fila >= inicioFila; fila--) {
                cout << matriz[fila][inicioColumna] << " ";
            }
            inicioColumna++;
        }
    }

    cout << endl;
    return 0;
}
