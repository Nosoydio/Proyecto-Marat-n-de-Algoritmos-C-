#include <iostream>
using namespace std;

int mcd(int a, int b) {
    while (b != 0) {
        int resto = a % b;
        a = b;
        b = resto;
    }
    return a;
}

int main() {
    int num1, num2;
    cout << "Ingrese el primer número: ";
    cin >> num1;
    cout << "Ingrese el segundo número: ";
    cin >> num2;

    if (num1 == 0 && num2 == 0) {
        cout << "El MCD no está definido para ambos números cero." << endl;
    } else {
        int resultado = mcd(abs(num1), abs(num2));
        cout << "El máximo común divisor es: " << resultado << endl;
    }

    return 0;
}
