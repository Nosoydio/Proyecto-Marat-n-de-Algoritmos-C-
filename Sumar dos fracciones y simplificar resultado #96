#include <iostream>
using namespace std;

// Función para calcular el máximo común divisor (MCD)
int mcd(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int num1, den1, num2, den2;
    cout << "Ingrese numerador y denominador de la primera fracción (ej. 3 4): ";
    cin >> num1 >> den1;
    cout << "Ingrese numerador y denominador de la segunda fracción (ej. 5 6): ";
    cin >> num2 >> den2;

    if (den1 == 0 || den2 == 0) {
        cout << "Error: el denominador no puede ser cero." << endl;
        return 0;
    }

    int numResultado = num1 * den2 + num2 * den1;
    int denResultado = den1 * den2;

    int divisor = mcd(numResultado, denResultado);
    numResultado /= divisor;
    denResultado /= divisor;

    cout << "La suma simplificada es: " << numResultado << "/" << denResultado << endl;

    return 0;
}
