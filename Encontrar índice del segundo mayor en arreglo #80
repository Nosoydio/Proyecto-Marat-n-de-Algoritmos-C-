#include <iostream>
#include <climits>
using namespace std;

int main() {
    int cantidadElementos;
    cout << "Ingrese la cantidad de elementos del arreglo: ";
    cin >> cantidadElementos;

    if (cantidadElementos < 2) {
        cout << "Se requieren al menos dos elementos para encontrar el segundo mayor." << endl;
        return 0;
    }

    int arreglo[cantidadElementos];
    for (int indice = 0; indice < cantidadElementos; indice++) {
        cout << "Elemento " << indice + 1 << ": ";
        cin >> arreglo[indice];
    }

    int mayorValor = INT_MIN;
    int segundoMayorValor = INT_MIN;
    int indiceMayor = -1;
    int indiceSegundoMayor = -1;

    for (int indice = 0; indice < cantidadElementos; indice++) {
        int valorActual = arreglo[indice];

        if (valorActual > mayorValor) {
            segundoMayorValor = mayorValor;
            indiceSegundoMayor = indiceMayor;

            mayorValor = valorActual;
            indiceMayor = indice;
        } else if (valorActual > segundoMayorValor && valorActual < mayorValor) {
            segundoMayorValor = valorActual;
            indiceSegundoMayor = indice;
        }
    }

    if (indiceSegundoMayor != -1) {
        cout << "Ãndice del segundo mayor elemento: " << indiceSegundoMayor << endl;
    } else {
        cout << "No hay un segundo mayor distinto en el arreglo." << endl;
    }

    return 0;
}
