#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del arreglo: ";
    cin >> n;
    int arreglo[n], prefijos[n];

    for (int i = 0; i < n; i++) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> arreglo[i];
    }

    prefijos[0] = arreglo[0];
    for (int i = 1; i < n; i++) {
        prefijos[i] = prefijos[i - 1] + arreglo[i];
    }

    cout << "Suma acumulada (prefijos): ";
    for (int i = 0; i < n; i++) {
        cout << prefijos[i] << " ";
    }
    cout << endl;
    return 0;
}
