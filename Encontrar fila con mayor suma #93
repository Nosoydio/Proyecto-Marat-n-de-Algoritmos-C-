#include <iostream>
#include <vector>
using namespace std;

int main() {
    int filas, columnas;
    cout << "Ingrese el número de filas: ";
    cin >> filas;
    cout << "Ingrese el número de columnas: ";
    cin >> columnas;

    vector<vector<int>> matriz(filas, vector<int>(columnas));
    int sumaMaxima = 0;
    int indiceFilaMaxima = 0;

    cout << "Ingrese los elementos de la matriz:" << endl;
    for (int i = 0; i < filas; i++) {
        int sumaFila = 0;
        for (int j = 0; j < columnas; j++) {
            cout << "Elemento [" << i << "][" << j << "]: ";
            cin >> matriz[i][j];
            sumaFila += matriz[i][j];
        }
        if (i == 0 || sumaFila > sumaMaxima) {
            sumaMaxima = sumaFila;
            indiceFilaMaxima = i;
        }
    }

    cout << "La fila con mayor suma es la fila " << indiceFilaMaxima
         << " con una suma de " << sumaMaxima << "." << endl;

    return 0;
}
